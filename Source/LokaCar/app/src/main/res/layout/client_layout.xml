<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_client_layout_nom_prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOM PrÃ©nom"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_client_layout_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_client_layout_nom_prenom"
                android:text="06 28 92 34 87"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_client_layout_nb_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 locations"/>

            <TextView
                android:id="@+id/tv_client_layout_nb_locations_en_cours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_client_layout_nb_locations"
                android:text="3 locations en cours"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_client_layout_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/stat_sys_phone_call"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>